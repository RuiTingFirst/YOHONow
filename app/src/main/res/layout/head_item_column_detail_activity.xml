<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorWhite"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/magin_two_hundred"
    android:scaleType="fitXY"
    android:id="@+id/iv_head_item_column_detail_activity"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/padding_ten"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/magin_fifteen"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/padding_ten"
            android:layout_gravity="center"
            android:id="@+id/tv_summary_head_item_column_detail_activity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/magin_fifteen"
            android:layout_marginTop="@dimen/padding_ten"
            android:layout_gravity="center"
            android:id="@+id/tv_total_head_item_column_detail_activity"/>
    </LinearLayout>
</LinearLayout>