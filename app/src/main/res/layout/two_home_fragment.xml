<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_five"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_params_image_two_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_two_hundred_and_fifty"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_params_title_two_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_five"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_five">

            <TextView
                android:id="@+id/two_home_fragment_jing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_five"
                android:textSize="@dimen/size_ten"
                android:text="@string/jingHao"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/tv_params_tag_name_two_home_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/size_ten"
                android:textColor="@color/colorlan"/>

            <TextView
                android:id="@+id/tv_params_create_time_two_home_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_ten"
                android:layout_marginLeft="@dimen/magin_twenty_five"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>