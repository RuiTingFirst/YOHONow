<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re_community_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_forty">

        <TextView
            android:id="@+id/tv_community_fragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_forty"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="@string/community_main"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:id="@+id/iv_community_home_write_press_black"
            style="@style/magin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/community_home_write_press_black"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_community_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/re_community_fragment"
        android:scrollbars="none">

    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/magin_fifteen"
        android:layout_marginRight="@dimen/magin_twenty"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/community_home_plz_login_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:gravity="center"
            android:text="@string/qing_denglu"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

</RelativeLayout>