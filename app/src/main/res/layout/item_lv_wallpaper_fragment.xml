<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_margin="@dimen/padding_five"
        android:orientation="horizontal">

    <LinearLayout
        style="@style/wallpaperFragmentLvItemVerOne">

        <RelativeLayout

            style="@style/wallpaperFragmentRlItem">

            <TextView
                android:id="@+id/item_tv_journal_lv_wallpaper_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/magin_twenty"
                android:textSize="@dimen/size_twenty"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_fifteen"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_twenty"
                android:layout_toRightOf="@id/item_tv_journal_lv_wallpaper_fragment"
                android:text="@string/wallpaper_xing"/>

            <TextView
                android:id="@+id/item_tv_month_lv_wallpaper_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/item_tv_journal_lv_wallpaper_fragment"
                android:layout_below="@id/item_tv_journal_lv_wallpaper_fragment"
                android:textSize="@dimen/size_fifteen"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_one"
                android:background="@color/colorBlack"
                android:layout_below="@id/item_tv_month_lv_wallpaper_fragment"
                android:layout_alignRight="@id/item_tv_month_lv_wallpaper_fragment"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wallpaperFragmentLvItemVer"
        android:padding="@dimen/padding_five">

        <ImageView
            android:id="@+id/item_iv_one_thumbImage_lv_wallpaper_fragment"
            style="@style/wallpaperFragmentIvItem"
            />

        <ImageView
            android:id="@+id/item_iv_two_thumbImage_lv_wallpaper_fragment"
            style="@style/wallpaperFragmentIvItem"/>
    </LinearLayout>

    <LinearLayout
        style="@style/wallpaperFragmentLvItemVer"
        android:padding="@dimen/padding_five">

        <ImageView
            android:id="@+id/item_iv_three_thumbImage_lv_wallpaper_fragment"
            style="@style/wallpaperFragmentIvItem"/>

        <ImageView
            android:id="@+id/item_iv_four_thumbImage_lv_wallpaper_fragment"
            style="@style/wallpaperFragmentIvItem"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>