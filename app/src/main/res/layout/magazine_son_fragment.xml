              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/magazineSonFragmentCarView">

        <LinearLayout
            style="@style/magazineSonFragmentLlH">

            <LinearLayout
                style="@style/magazineSonFragmentLlV">

                <RelativeLayout
                    style="@style/magazineSonFragmentRl">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorBlack"
                        android:gravity="center"
                        android:text="@string/yoho_boy"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    style="@style/magazineSonFragmentRl">

                    <TextView

                        android:id="@+id/tv_more_boy_magazine_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/more"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/magazineSonFragmentLlV">

                <RelativeLayout
                    style="@style/magazineSonFragmentRlIv">

                    <ImageView
                        android:id="@+id/item_iv_cover_sum_boy_one_magazine_son_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/download_magazine_logo"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/item_tv_journal_boy_one_magazine_son_fragment"
                    style="@style/magazineSonFragmentRlTv"/>
            </LinearLayout>

            <LinearLayout
                style="@style/magazineSonFragmentLlV">

                <RelativeLayout
                    style="@style/magazineSonFragmentRlIv">

                    <ImageView
                        android:id="@+id/item_iv_cover_sum_boy_two_magazine_son_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/download_magazine_logo"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/item_tv_journal_boy_two_magazine_son_fragment"
                    style="@style/magazineSonFragmentRlTv"/>
            </LinearLayout>

            <LinearLayout
                style="@style/magazineSonFragmentLlV">

                <RelativeLayout
                    style="@style/magazineSonFragmentRlIv">

                    <ImageView
                        android:id="@+id/item_iv_cover_sum_boy_three_magazine_son_fragment"
