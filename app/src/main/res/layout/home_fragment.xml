<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_forty"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_toolbar_mine_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_ten"
            android:src="@mipmap/toolbar_mine"/>

        <ImageView
            android:id="@+id/iv_white_load_0000_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_five"
            android:src="@mipmap/white_load_0000"/>

        <ImageView
            android:id="@+id/iv_toolbar_search_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_five"
            android:src="@mipmap/toolbar_search"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:scrollbars="none">

    </ListView>
</LinearLayout>