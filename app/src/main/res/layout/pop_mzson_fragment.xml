<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#55000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_pop_mzson_fragment">


        <RelativeLayout
            android:layout_width="@dimen/magin_two_hundred_and_fifty"
            android:layout_height="@dimen/magin_three_hundred_eight"
            android:layout_centerInParent="true"
            android:id="@+id/re_pop_mzson_fragment">

            <ImageView
                android:id="@+id/iv_pop_mzson_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_five"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_close"/>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/magin_eighty"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_yoho_pop_mzson_fragment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_zero"
            android:layout_marginTop="@dimen/padding_ten"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="@dimen/magin_yibaiershi"
            android:layout_height="@dimen/activity_zero"
            android:layout_gravity="center"
            android:layout_margin="@dimen/magin_fifteen"
            android:layout_weight="1"
            android:background="@drawable/border_download">

            <TextView
                android:id="@+id/tv_download_pop_mzson_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/download"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
</RelativeLayout>