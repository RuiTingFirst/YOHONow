                </RelativeLayout>

                <TextView
                    android:id="@+id/item_tv_journal_boy_three_magazine_son_fragment"
                    style="@style/magazineSonFragmentRlTv"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

