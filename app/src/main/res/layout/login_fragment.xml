<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorshenHui"
              android:orientation="vertical">
    <!--默认刚开始没有焦点 这是一个虚假的LinearLayout，不会显示的，但是会抢走焦点
                默认焦点的顺序是：从上倒下 从左到右第一个可以输入的控件作为焦点可以使用
                注意 !!!!  一定要放在第一位-->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <!--请求焦点-->
        <requestFocus/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--大图-->
            <ImageView
                android:id="@+id/iv_yoho_family_log_in_activity"
                android:layout_width="@dimen/magin_two_hundred_and_fifty"
                android:layout_height="@dimen/yibailiushi"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@mipmap/yoho_family"
                android:visibility="visible"/>
            <!--小图-->
            <ImageView
                android:id="@+id/iv_yoho_famile_small_log_in_activity"
                android:layout_width="@dimen/magin_one_hundred"
                android:layout_height="@dimen/magin_eighty"
                android:src="@mipmap/yoho_famile_small"
                android:visibility="gone"/>
            <!--账号可登录-->
            <TextView
                android:id="@+id/tv_question_log_in_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/magin_twenty"
                android:drawableRight="@mipmap/question_icon"
                android:text="@string/log_in_text"
                android:textColor="@color/colorWhite"/>
            <!--手机号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_forty"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:layout_marginTop="@dimen/magin_twenty"
                android:background="@drawable/bordershen">

                <ImageView
                    android:id="@+id/iv_y_login_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_ten"
                    android:src="@mipmap/y_icon"/>

                <EditText
                    android:id="@+id/edt_phone_number_log_in_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_ten"
                    android:layout_toRightOf="@id/iv_y_login_fragment"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"/>

                <ImageView
                    android:id="@+id/iv_num_close_small_login_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_ten"
                    android:src="@mipmap/close_small"
                    android:visibility="gone"/>

            </RelativeLayout>
            <!--密码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_forty"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:layout_marginTop="@dimen/magin_twenty"
                android:background="@drawable/bordershen"
                android:orientation="horizontal">
                <!--注意: textView一定要写在前面-->
                <EditText
                    android:id="@+id/edt_password_log_in_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/magin_twenty"
                    android:background="@null"
                    android:hint="@string/password"
                    android:password="true"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"/>

                <ImageView
                    android:id="@+id/iv_close_small_login_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/magin_thirty"
                    android:src="@mipmap/close_small"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_login_password_see_icon_log_in_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/padding_ten"
                    android:src="@mipmap/login_password_see_icon"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_login_password_unsee_icon_log_in_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/padding_ten"
                    android:src="@mipmap/login_password_unsee_icon"
                    android:visibility="visible"/>

            </RelativeLayout>
            <!--登录-->
            <Button
                android:id="@+id/btn_denglu_login_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/magin_fifty"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:layout_marginTop="@dimen/magin_twenty"
                android:text="@string/draw_layout_denglu"
                android:textColor="@color/colorWhite"/>
            <!--忘记密码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_forget_password_lon_in_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/magin_fifteen"
                    android:layout_marginTop="@dimen/padding_ten"
                    android:text="@string/password_forget"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--微信 微博 QQ 更多-->
                <LinearLayout
                    android:id="@+id/ll_more_login_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/magin_forty"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/magin_forty"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_wechat_log_in_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/wechat_icon"/>

                    <ImageView
                        android:id="@+id/iv_weibo_log_in_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/weibo_icon"/>

                    <ImageView
                        android:id="@+id/iv_qq_login_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/qq_icon"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_more_login_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/more_icon"
                        android:visibility="visible"/>
                </LinearLayout>
                <!--F UP-->
                <LinearLayout
                    android:id="@+id/ll_f_up_login_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/magin_forty"
                    android:layout_alignLeft="@id/ll_more_login_activity"
                    android:layout_below="@id/ll_more_login_activity"
                    android:layout_marginTop="@dimen/magin_twenty"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_f_login_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/f_icon"/>

                    <ImageView
                        android:id="@+id/iv_up_lohin_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/up_icon"/>
                </LinearLayout>
                <!--international-->
                <LinearLayout
                    android:id="@+id/ll_international_customer_login_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_f_up_login_activity"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/magin_fifteen"
                    android:background="@drawable/bordercircl"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_international_customer_login_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin_twenty"
                        android:layout_marginRight="@dimen/magin_twenty"
                        android:gravity="center"
                        android:text="@string/international"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
            </RelativeLayout>
            <!--注册-->
            <TextView
                android:id="@+id/tv_register_login_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/magin_twenty"
                android:layout_marginTop="@dimen/padding_ten"
                android:text="@string/register"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>